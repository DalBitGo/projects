<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 그라디언트 배경 (보라색 계열) -->
    <gradient
        android:startColor="#1A0A2E"
        android:centerColor="#2D1B4E"
        android:endColor="#1A0A2E"
        android:angle="135"
        android:type="linear" />

    <!-- 둥근 모서리 -->
    <corners android:radius="16dp" />

    <!-- 금색 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#4D3D6B" />

</shape>
